<%= form_with url: session_path, method: :post, local: true do |form| %>
    <h3><%= @group.present? ? "Sign Up to Join #{@group.name}" : "Login" %></h3>
  
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>
  
    <% if @group.present? %>
      <div class="form-group">
        <%= form.submit "Join #{@group.name}", class: "btn btn-success" %>
      </div>
    <% else %>
      <div class="form-group">
        <%= form.submit "Login", class: "btn btn-primary" %>
      </div>
    <% end %>
    
  <% end %>
  
  <%= link_to "Don't have an account? Sign up", new_user_registration_path %>
  <%= link_to "Forgot your password?", new_user_password_path %>
  