<div class="container mt-4">
  <h2>Edit Group: <%= @group.name %></h2>

  <%= form_with model: @group, local: true do |f| %>
    <% if @group.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@group.errors.count, "error") %> prohibited this group from being updated:</h4>
        <ul>
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div>
      <%= f.submit "Update Group Name", class: "btn btn-primary" %>
      <%= link_to "Cancel", group_path(@group), class: "btn btn-secondary ms-2" %>
    </div>
  <% end %>
</div>