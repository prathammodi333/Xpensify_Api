<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
    <h2 class="text-center mb-4">Login to Xpensify</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true, autofocus: true, placeholder: "Enter your email" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true, minlength: 8, placeholder: "Enter your password" %>
      </div>

      <div class="d-grid">
        <%= f.submit "🔐 Log In", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <p class="text-center mt-3">
      Don’t have an account? <%= link_to "Sign up", new_user_registration_path, class: "text-decoration-none" %>
    </p>
  </div>
</div>